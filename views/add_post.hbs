<div class="card card-outline-secondary mt-5">
    <div class="card-header ">
        <h3 class="mb-0 ">New Post</h3>
    </div>
    <div class="card-body">
        <form method="post" action="/post/add" autocomplete="off" class="form" role="form" enctype="multipart/form-data">
            <fieldset>
                <div class="row mb-3">
                    <div class="col-lg-6">
                        <label class="mb-1 " for="title"><strong>Tilte</strong></label>
                        <input class="form-control" id="title" name="title" required="" type="text">
                    </div>
                    <div class="col-lg-6">
                        <label class="mb-1 " for="author"><strong>Author</strong></label>
                        <input class="form-control" id="author" name="author" required="" type="text">
                    </div>
                </div>
                <label class="mb-1 " for="desc"><strong>Description</strong></label>
                <div class="row mb-3">
                    <div class="col-lg-12">
                        <textarea class="form-control" id="desc" name="desc" required="" rows="6"></textarea>
                    </div>
                    <div class="col-lg-6">
                        <label class="mb-1 " for="author"><strong>Author</strong></label>
                        <input class="form-control" id="file" name="file" required="" type="file">
                    </div>
                </div>
                <button class="btn btn-dark  btn-md mt-4 float-right" type="submit">Add New Post</button>
            </fieldset>
        </form>
    </div>
</div><!-- /form contact -->